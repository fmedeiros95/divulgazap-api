{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^~/(.*)$": "<rootDir>/../src/$1",
    "^~/libs/storage(|/.*)$": "<rootDir>/../libs/storage/src/$1",
    "~/libs/baileys(|/.*)": "<rootDir>/../libs/baileys/src/$1"
  }
}
